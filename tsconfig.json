{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "sourceRoot": "src",
    "strict": true,
    "target": "ESNext",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
